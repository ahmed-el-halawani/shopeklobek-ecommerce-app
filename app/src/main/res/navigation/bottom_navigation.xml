<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"

    app:startDestination="@id/brandsFragment">

    <fragment
        android:id="@+id/nav_login"
        android:name="com.stash.shopeklobek.ui.authentication.login.LoginFragment"
        tools:layout="@layout/fragment_login"
        android:label="LoginFragment" >
        <argument
            android:name="arg"
            app:argType="string" />
        <argument
            android:name="ahmed"
            app:argType="boolean" />
        <argument
            android:name="s"
            app:argType="com.stash.shopeklobek.model.entities.Address" />
    </fragment>
    <fragment
        android:id="@+id/product_details_fragment"
        android:name="com.stash.shopeklobek.ui.home.product_details.ProductDetailsFragment"
        tools:layout="@layout/fragment_product_details"
        android:label="ProductDetails" />
    <fragment
        android:id="@+id/brandsFragment"
        android:name="com.stash.shopeklobek.ui.home.brands.BrandsFragment"
        tools:layout="@layout/fragment_brands"

        android:label="BrandsFragment" />
    <fragment
        android:id="@+id/categoriesFragment"
        tools:layout="@layout/fragment_categories"

        android:name="com.stash.shopeklobek.ui.home.categories.CategoriesFragment"
        android:label="CategoriesFragment">

        <action
            android:id="@+id/action_product_details"
            app:destination="@id/product_details_fragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        tools:layout="@layout/fragment_cart"

        android:name="com.stash.shopeklobek.ui.home.cart.CartFragment"
        android:label="CartFragment" >
        <action
            android:id="@+id/action_cartFragment_to_nav_login"
            app:destination="@id/nav_login" />
        <action
            android:id="@+id/action_cartFragment_to_shappingAddressesFragment"
            app:destination="@id/shappingAddressesFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        tools:layout="@layout/fragment_favorites"

        android:name="com.stash.shopeklobek.ui.home.favorites.FavoritesFragment"
        android:label="FavoritesFragment" />
    <fragment
        tools:layout="@layout/fragment_shipping_address"
        android:id="@+id/shappingAddressesFragment"
        android:name="com.stash.shopeklobek.ui.home.shipping_addresses.ShippingAddressesFragment"
        android:label="ShappingAddressesFragment" />
</navigation>