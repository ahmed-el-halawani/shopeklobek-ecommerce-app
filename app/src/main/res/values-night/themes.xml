<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shopeklobek" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/textColor</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="TextBackground" parent="Widget.AppCompat.TextView">
         <item name="android:background">@color/background</item>
    </style>

    <style name="ButtonAddToCart" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:background">@drawable/bg_bt_add_bag_night</item>
    </style>
</resources>